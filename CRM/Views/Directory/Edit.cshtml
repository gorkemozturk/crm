@model CRM.Models.ViewModels.DirectoryViewModel
@{
    ViewData["Title"] = "EDIT THE EXISTING PERSONNEL";
}

<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                <form id="form" method="post" asp-antiforgery="true" asp-route-id="@Model.Personnel.ID">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="First Name" class="form-control" asp-for="Personnel.FirstName" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.FirstName"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="Last Name" class="form-control" asp-for="Personnel.LastName" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.LastName"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="Birthday" class="form-control" asp-for="Personnel.Birthday" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.Birthday"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <select asp-for="Personnel.FirmID" class="form-control" asp-items="@(new SelectList(Model.Firms, "ID", "Name"))">
                                    <option value="">Individual</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="E-Mail" class="form-control" asp-for="Personnel.Email" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.Email"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="Phone" class="form-control" asp-for="Personnel.Phone" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.Phone"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="City" class="form-control" asp-for="Personnel.City" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.City"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="Province" class="form-control" asp-for="Personnel.Province" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.Province"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input placeholder="Country" class="form-control" asp-for="Personnel.Country" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Personnel.Country"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input placeholder="Address" class="form-control" asp-for="Personnel.Address" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Personnel.Address"></span>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-angle-left"></i>
                    Back to Team List
                </a>
                <a href="javascript: $('#form').submit()" class="btn btn-primary">
                    <i class="fa fa-refresh"></i>
                    Update
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <partial name="_StylesPartial" />
}

@section Scripts {
    <partial name="_ValidationPartial" />
}
