@model CRM.Models.ViewModels.DirectoryViewModel
@{
    ViewData["Title"] = "DELETE THE EXISTING PERSONNEL";
}

<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                <form id="form" method="post" asp-antiforgery="true" asp-route-id="@Model.Personnel.ID">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="First Name" class="form-control" asp-for="Personnel.FirstName" autocomplete="off">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="Last Name" class="form-control" asp-for="Personnel.LastName" autocomplete="off">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="Birthday" class="form-control" asp-for="Personnel.Birthday" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <select disabled asp-for="Personnel.FirmID" class="form-control" asp-items="@(new SelectList(Model.Firms, "ID", "Name"))">
                                    <option value="">Individual</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="E-Mail" class="form-control" asp-for="Personnel.Email" autocomplete="off">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="Phone" class="form-control" asp-for="Personnel.Phone" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="City" class="form-control" asp-for="Personnel.City" autocomplete="off">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="Province" class="form-control" asp-for="Personnel.Province" autocomplete="off">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <input disabled placeholder="Country" class="form-control" asp-for="Personnel.Country" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input disabled placeholder="Address" class="form-control" asp-for="Personnel.Address" autocomplete="off">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-angle-left"></i>
                    Back to Team List
                </a>
                <a href="javascript: $('#form').submit()" class="btn btn-danger">
                    <i class="fa fa-trash"></i>
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <partial name="_StylesPartial" />
}