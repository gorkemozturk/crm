@model CRM.Models.ViewModels.ReplyViewModel
@{
    ViewData["Title"] = "REPLY THE MESSAGE";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                <form id="form" method="post" asp-route-id="@Model.Message.ID" asp-action="Reply" asp-antiforgery="true">
                    <div class="form-group">
                        <label>From</label>
                        <input disabled class="form-control" value="RE: @Model.Message.Subject">
                    </div>
                    <div class="form-group">
                        <label asp-for="Reply.Body"></label>
                        <textarea placeholder="Message" asp-for="Reply.Body" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Reply.Body"></span>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a href="javascript: $('#form').submit()" class="btn btn-primary">
                    <i class="fa fa-paper-plane"></i>
                    Reply the Message
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <partial name="_StylesPartial" />
}

@section Scripts {
    <partial name="_ValidationPartial" />
}
