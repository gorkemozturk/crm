@model CRM.Models.ViewModels.MessageViewModel
@{
    ViewData["Title"] = "SEND A MESSAGE: ";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                <form id="form" method="post" asp-action="Send" asp-antiforgery="true">
                    <div class="form-group">
                        <label>To</label>
                        <input disabled class="form-control" value="@Model.Receiver.FullName()">
                    </div>
                    <div class="form-group">
                        <label asp-for="Message.Subject"></label>
                        <input placeholder="Subject" class="form-control" asp-for="Message.Subject" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Message.Subject"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message.Body"></label>
                        <textarea placeholder="Message" asp-for="Message.Body" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Message.Body"></span>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a href="javascript: $('#form').submit()" class="btn btn-primary">
                    <i class="fa fa-paper-plane"></i>
                    Send the Message
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <partial name="_StylesPartial" />
}

@section Scripts {
    <partial name="_ValidationPartial" />
}
