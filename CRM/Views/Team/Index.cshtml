@model IEnumerable<CRM.Models.Team>
@using CRM.Services.Team
@inject TeamService TeamService
@{
    ViewData["Title"] = "TEAM LIST";
    int counter = 1;
}

<div class="row">
    <div class="col-lg-12 mx-auto">
        @if (User.IsInRole(StaticEnvironments.User))
        {
            <div class="mb-3 text-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fa fa-plus-circle"></i>
                    Create a New Team
                </a>
            </div>
        }
        <div class="card">
            <div class="card-header text-center">
                @ViewData["Title"]
            </div>
            <div class="p-0 card-body">
                @if (Model.Count() > 0)
                {
                    <table style="border: none" class="table table-hover table-striped table-borderless">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.Description)</th>
                                <th scope="col" class="text-center">Members</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.Raw(counter)</td>
                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                    <td>@Html.DisplayFor(m => item.Description)</td>
                                    <td class="text-center">@TeamService.MembersCount(item.ID)</td>
                                    <td class="text-right"></td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-primary" role="alert">
                        There are no any resources to show here.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <partial name="_StylesPartial" />
}