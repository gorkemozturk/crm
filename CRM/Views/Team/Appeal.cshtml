@model CRM.Models.Team
@{
    ViewData["Title"] = "APPEAL THE EXISTING TEAM";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                <form id="form" method="post" asp-action="Appeal" asp-controller="Team" asp-antiforgery="true" asp-route-id="@Model.ID">
                    <div class="form-group">
                        <input readonly placeholder="Name" class="form-control" asp-for="Name" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <textarea readonly placeholder="Description" asp-for="Description" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-angle-left"></i>
                    Back to Team List
                </a>
                <a href="javascript: $('#form').submit()" class="btn btn-primary">
                    <i class="fa fa-check"></i>
                    Appeal the Team
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <partial name="_StylesPartial" />
}